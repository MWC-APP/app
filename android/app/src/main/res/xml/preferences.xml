<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Personal Goals">

        <EditTextPreference
            android:key="daily_study_minutes"
            android:title="Daily Study Minutes"
            android:inputType="number"
            android:defaultValue="120" />

        <EditTextPreference
            android:key="weekly_study_sessions"
            android:title="Weekly Study Sessions"
            android:inputType="number"
            android:defaultValue="20" />

        <EditTextPreference
            android:key="target_focus_score"
            android:title="Target Focus Score"
            android:inputType="number"
            android:defaultValue="70" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Break Settings">

        <SwitchPreferenceCompat
            android:key="adaptive_breaks"
            android:title="Adaptive Breaks"
            android:summary="Adjust break duration based on energy levels"
            android:defaultValue="true" />

        <EditTextPreference
            android:key="short_break_duration"
            android:title="Short Break Duration"
            android:inputType="number"
            android:defaultValue="5" />

        <EditTextPreference
            android:key="long_break_duration"
            android:title="Long Break Duration"
            android:inputType="number"
            android:defaultValue="15" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="PAM Thresholds">

        <EditTextPreference
            android:key="pam_low"
            android:title="Low Threshold"
            android:inputType="number"
            android:defaultValue="15" />

        <EditTextPreference
            android:key="pam_medium"
            android:title="Medium Threshold"
            android:inputType="number"
            android:defaultValue="25" />

        <EditTextPreference
            android:key="pam_high"
            android:title="High Threshold"
            android:inputType="number"
            android:defaultValue="35" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Calendar Integration">

        <SwitchPreferenceCompat
            android:key="calendar_integration"
            android:title="Enable Calendar Integration"
            android:summary="Block study time based on calendar events"
            android:defaultValue="true" />

        <EditTextPreference
            android:key="buffer_before"
            android:title="Buffer Before Event"
            android:summary="Minutes"
            android:inputType="number"
            android:defaultValue="15" />

        <EditTextPreference
            android:key="buffer_after"
            android:title="Buffer After Event"
            android:summary="Minutes"
            android:inputType="number"
            android:defaultValue="10" />

    </PreferenceCategory>

</PreferenceScreen>