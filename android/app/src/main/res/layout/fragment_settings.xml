<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    android:padding="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Timer Settings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"/>

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_coin_icon"
            android:layout_gravity="end|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close" />

    </FrameLayout>

    <!-- Study Session Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Duration"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"/>

    <TextView
        android:id="@+id/study_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:text="25 min"
        android:textColor="?attr/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <com.google.android.material.slider.Slider
        android:id="@+id/study_duration_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="15.0"
        android:valueTo="60.0"
        android:stepSize="5.0"
        android:value="25.0" />

    <!-- Short Pause Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short Pause Duration"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"/>

    <TextView
        android:id="@+id/pause_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:text="5 min"
        android:textColor="?attr/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <com.google.android.material.slider.Slider
        android:id="@+id/pause_duration_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="5.0"
        android:valueTo="30.0"
        android:stepSize="5.0"
        android:value="5.0" />

    <!-- Long Pause Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Pause Duration"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"/>

    <TextView
        android:id="@+id/long_pause_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:text="15 min"
        android:textColor="?attr/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <com.google.android.material.slider.Slider
        android:id="@+id/long_pause_duration_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="10.0"
        android:valueTo="45.0"
        android:stepSize="5.0"
        android:value="15.0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save and Close"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"/>

</LinearLayout>
