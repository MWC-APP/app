<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
    app:strokeWidth="0dp"
    app:contentPadding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Question Text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/question_text"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question text goes here"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Rating Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="7"
                android:stepSize="1"
                android:rating="4"
                android:progressTint="?attr/colorPrimary"
                android:secondaryProgressTint="?attr/colorSurfaceContainerHighest"
                android:progressBackgroundTint="?attr/colorSurfaceContainerHighest"
                android:isIndicator="false"
                android:scaleX="0.9"
                android:scaleY="0.9"
                style="?android:attr/ratingBarStyle" />

            <!-- Labels Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rating_min_label"
                    style="@style/TextAppearance.Material3.LabelSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strongly Disagree"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="start" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rating_max_label"
                    style="@style/TextAppearance.Material3.LabelSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strongly Agree"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>