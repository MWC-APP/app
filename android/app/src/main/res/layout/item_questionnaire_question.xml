<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Question Text -->
        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question text goes here"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Rating Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="7"
                android:stepSize="1"
                android:rating="4"
                android:progressTint="?attr/colorPrimary"
                android:secondaryProgressTint="?attr/colorPrimaryVariant"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyle" />

            <!-- Labels Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/rating_min_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strongly Disagree"
                    android:textSize="12sp"
                    android:textColor="?android:textColorSecondary"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/rating_max_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strongly Agree"
                    android:textSize="12sp"
                    android:textColor="?android:textColorSecondary"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Current Rating Display -->
            <TextView
                android:id="@+id/current_rating_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 4/7"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>